<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/methodName" android:singleLine="true" android:textColor="@android:color/holo_blue_dark"
            android:hint="name" android:textAppearance="?android:attr/textAppearanceLarge" android:padding="10dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/methodResult" android:layout_weight="1" android:singleLine="true"
            android:textColor="@android:color/white"
            android:hint="result" android:textAppearance="?android:attr/textAppearanceLarge" android:padding="10dp"/>
</LinearLayout>